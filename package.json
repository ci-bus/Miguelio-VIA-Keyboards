{
  "name": "miguelio-via",
  "version": "3.2.1",
  "main": "main.js",
  "author": "Miguelio <teclados@miguelio.com> (https://miguelio.com/)",
  "description": "VIA keyboards software to change key codes config and lights",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "e2e": "ng e2e",
    "start:front": "ng serve -o",
    "start:electron": "ng build --base-href ./ && electron .",
    "package": "ng build --base-href ./ && electron-forge package",
    "make": "ng build --base-href ./ && electron-forge make",
    "electron": "electron ."
  },
  "private": true,
  "dependencies": {
    "electron-download-manager": "~2.1.2",
    "glob": "~7.1.6",
    "node-hid": "~2.1.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.6",
    "@angular/animations": "~11.2.7",
    "@angular/cdk": "~11.2.8",
    "@angular/cli": "~11.2.6",
    "@angular/common": "~11.2.7",
    "@angular/compiler": "~11.2.7",
    "@angular/compiler-cli": "~11.2.7",
    "@angular/core": "~11.2.7",
    "@angular/forms": "~11.2.7",
    "@angular/material": "~11.2.8",
    "@angular/platform-browser": "~11.2.7",
    "@angular/platform-browser-dynamic": "~11.2.7",
    "@angular/router": "~11.2.7",
    "@electron-forge/cli": "~6.0.0-beta.54",
    "@electron-forge/maker-deb": "~6.0.0-beta.54",
    "@electron-forge/maker-dmg": "~6.0.0-beta.57",
    "@electron-forge/maker-rpm": "~6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "~6.0.0-beta.54",
    "@electron-forge/maker-zip": "~6.0.0-beta.54",
    "@ngrx/effects": "~11.1.0",
    "@ngrx/store": "~11.1.0",
    "@ngrx/store-devtools": "~11.1.0",
    "@ngx-translate/core": "~13.0.0",
    "@ngx-translate/http-loader": "~6.0.0",
    "@types/electron": "~1.6.10",
    "@types/jasmine": "~3.6.0",
    "@types/node": "~14.14.33",
    "codelyzer": "~6.0.0",
    "electron": "~12.0.7",
    "electron-squirrel-startup": "~1.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.5.0",
    "protractor": "~7.0.0",
    "rxjs": "~6.6.0",
    "ts-node": "~8.3.0",
    "tslib": "~2.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.5",
    "zone.js": "~0.11.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/icons/icon.ico",
        "executableName": "Miguelio VIA",
        "name": "Miguelio",
        "productName": "Miguelio",
        "overwrite": true,
        "ignore": [
          "out"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel"
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        }
      ]
    }
  }
}
